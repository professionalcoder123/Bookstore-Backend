  "components": {
    "schemas": {
      "Admin": {
        "required": [
          "Email",
          "FirstName",
          "LastName",
          "Password",
          "Role"
        ],
        "type": "object",
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "FirstName": {
            "minLength": 1,
            "pattern": "^[A-Za-z]+$",
            "type": "string"
          },
          "LastName": {
            "minLength": 1,
            "pattern": "^[A-Za-z]+$",
            "type": "string"
          },
          "Email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "Password": {
            "minLength": 1,
            "type": "string"
          },
          "Role": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Book": {
        "required": [
          "Author",
          "BookName",
          "Price",
          "Quantity"
        ],
        "type": "object",
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "BookName": {
            "maxLength": 2000,
            "minLength": 0,
            "type": "string"
          },
          "Author": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "Description": {
            "maxLength": 20000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "Price": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "DiscountPrice": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "Quantity": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "BookImage": {
            "type": "string",
            "nullable": true
          },
          "AdminUserId": {
            "type": "integer",
            "format": "int32"
          },
          "CreatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "UpdatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "Email": {
            "type": "string",
            "nullable": true
          },
          "Password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "User": {
        "required": [
          "Email",
          "FirstName",
          "LastName",
          "Password",
          "Role"
        ],
        "type": "object",
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "FirstName": {
            "minLength": 1,
            "pattern": "^[A-Za-z]+$",
            "type": "string"
          },
          "LastName": {
            "minLength": 1,
            "pattern": "^[A-Za-z]+$",
            "type": "string"
          },
          "Email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "Password": {
            "minLength": 1,
            "type": "string"
          },
          "Role": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme (Example: 'Bearer token')",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
